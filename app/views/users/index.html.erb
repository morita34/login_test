<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= user.human_attribute_name(:title) %></th>
      <th><%= user.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.title %></td>
        <td><%= user.content %></td>
        <td><%= link_to t('common.show'), user %></td>
        <td><%= link_to t('common.edit'), edit_task_path(user) %></td>
        <td><%= link_to t('common.destroy'), user_path(@user), method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.new'), new_user_path %>